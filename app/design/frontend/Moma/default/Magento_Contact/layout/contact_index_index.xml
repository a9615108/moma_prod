<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="breadcrumbs">
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">Home</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string">Home</item>
                    <item name="label" xsi:type="string">Home</item>
                    <item name="link" xsi:type="string">/</item>
                </argument>
            </action>
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">Customer Service</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string">客戶服務</item>
                    <item name="label" xsi:type="string">客戶服務</item>
                </argument>
            </action>
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">Contact Us</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string">聯絡我們</item>
                    <item name="label" xsi:type="string">聯絡我們</item>
                </argument>
            </action>
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">Contact Form</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string">聯絡表單</item>
                    <item name="label" xsi:type="string">聯絡表單</item>
                </argument>
            </action>
        </referenceBlock>
    </body>
</page>
